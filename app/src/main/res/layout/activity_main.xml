<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/myVideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:controller_layout_id="@layout/custom_controls"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:hide_on_touch="true"
        app:resize_mode="fit"
        app:show_buffering="when_playing"
        android:visibility="gone"
        app:use_controller="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/box"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/boxLink"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent=".9"
                android:background="@drawable/inputs"
                android:layout_marginTop="15dp"
                android:hint="link"
                android:textColorHint="#BABABA"
                android:padding="5dp"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/boxUserAgent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent=".9"
                android:background="@drawable/inputs"
                android:layout_marginTop="15dp"
                android:hint="userAgent"
                android:textColorHint="#BABABA"
                android:padding="5dp"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/boxLink"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/boxHeaders"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent=".9"
                android:background="@drawable/inputs"
                android:layout_marginTop="15dp"
                android:hint=" Origin: https://www.hotstar.com\n
Referer: https://www.hotstar.com/"
                android:gravity="left"
                android:textColorHint="#BABABA"
                android:padding="5dp"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/boxUserAgent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="0"
                android:text="SUBMIT"
                android:onClick="submit"
                android:id="@+id/btn"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/boxHeaders"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>